%li.category-1__item
  = link_to category_path(category) do
    .category-1__text
      =category.name
  %ul.category-2
    - category.children.each do |child|
      %li.category-2__item
        = link_to category_path(child) do
          .category-2__text
            =child.name
        %ul.category-3
          - child.children.each do |grandchild|
            %li.category-3__item
              = link_to category_path(grandchild) do
                .category-3__text
                  =grandchild.name
