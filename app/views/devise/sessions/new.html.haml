.top-container
  %header.top-header
    %h1.top-header__logo
      %a.top-header__logo__link{ href: "https://www.mercari.com/jp/" }
        = image_tag "//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?917505326", alt: "mercari", class: "header__logo__image"
  .top-main
    .top-main-login
      .top-main-login__login-no-account
        %p アカウントお持ちでない方はこちら
        =link_to "新規会員登録", step1_signup_index_path, class: "new-user-registration"
      .top-main-login__login-form-inner
        =link_to user_facebook_omniauth_authorize_path, method: :post, class: "btn btn--facebook", id: "facebook-login" do
          .fab.fa-facebook-f.facebook-icon
          Facebookでログイン
        =link_to user_google_oauth2_omniauth_authorize_path, method: :post, class: "btn btn--google", id: "google-login" do
          Googleでログイン
      .top-form
        = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
          =f.email_field :email, class: 'login-input-text top-input-default', placeholder: 'メールアドレス'
          =f.password_field :password, class: "top-login-input-password top-input-default", placeholder: 'パスワード'
          .g-recaptcha.signup-recaptcha{"data-sitekey" => "6LfZGCYTAAAAAHoK-s7Lg5OdYg5Fq4susvALmZoc"}
            %div{style: "width: 304px; height: 78px;"}
              %div
                %iframe{frameborder: "0", height: "78", name: "a-fkxeui3qjqob", role: "presentation", sandbox: "allow-forms allow-popups allow-same-origin allow-scripts allow-top-navigation allow-modals allow-popups-to-escape-sandbox", scrolling: "no", src: "https://www.google.com/recaptcha/api2/anchor?ar=2&k=6LfZGCYTAAAAAHoK-s7Lg5OdYg5Fq4susvALmZoc&co=aHR0cHM6Ly93d3cubWVyY2FyaS5jb206NDQz&hl=ja&v=v1563777128698&size=normal&cb=z6qz81kxfhan", width: "304"}
                  %textarea#g-recaptcha-response.g-recaptcha-response{name: "g-recaptcha-response", style: "width: 250px; height: 40px; border: 1px solid rgb(193, 193, 193); margin: 10px 25px; padding: 0px; resize: none; display: none;"}
          .button
          =f.submit "ログイン", class: 'top-login-submit'
          = link_to "パスワードをお忘れの方", new_password_path(resource_name), class:"top-forget-password"
= render 'signup/shared/footer'